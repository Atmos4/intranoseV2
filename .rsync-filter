# Exclude files in the root folder that start with a dot (except .htaccess)
- /.*
# Include .htaccess in the root folder
+ /.htaccess
# Exclude all files in assets/images/profile folder (except none.jpg)
- /assets/images/profile/*
+ /assets/images/profile/none.jpg
# Exclude the root folder /logs
- /logs/
# Exclude tests
- /tests
# Exclude all files in uploads folder (except download_file.php)
- /app/uploads/*
+ /app/uploads/download_file.php