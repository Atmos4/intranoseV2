{
  "name": "atmos4/intranose-v2",
  "type": "project",
  "license": "MIT",
  "require": {
    "doctrine/orm": "^2.11.0",
    "symfony/cache": "^5.4",
    "doctrine/migrations": "^3.6",
    "phpmailer/phpmailer": "^6.8",
    "ramsey/uuid": "^4.7"
  },
  "autoload": {
    "classmap": [
      "database/models/",
      "engine/core/",
      "engine/validation/"
    ],
    "files": [
      "engine/helpers.php"
    ]
  },
  "scripts": {
    "setup": [
      "@composer install",
      "@db:migrate"
    ],
    "update:all": [
      "@composer dump-autoload",
      "@db:migrate"
    ],
    "db:migrate": "@php bin/doctrine --no-interaction migrations:migrate"
  }
}
